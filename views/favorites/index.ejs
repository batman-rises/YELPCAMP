<% layout("layouts/boilerplate") %>

<h1 class="mb-4">‚≠ê My Favorite Campgrounds</h1>

<div class="row">
  <% if (favorites.length === 0) { %>
    <p>You have no favorites yet.</p>
  <% } %>

  <% for (let camp of favorites) { %>
    <div class="col-md-6 mb-4">
      <div class="card">
        <img src="<%= camp.images[0]?.url %>" class="card-img-top" />
        <div class="card-body">
          <h5 class="card-title"><%= camp.title %></h5>
          <p class="card-text"><%= camp.location %></p>
          <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary btn-sm">
            View
          </a>
        </div>
      </div>
    </div>
  <% } %>
</div>
